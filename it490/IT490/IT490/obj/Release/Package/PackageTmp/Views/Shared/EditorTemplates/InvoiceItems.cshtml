@model string

@{
    var itemIDs = Model != null ? Model.Split(',') : new string[]{};
    var items = ViewData["Items"] as IEnumerable<ItemDTO>;
    var selectedItems = new List<ItemDTO>();
    
    foreach(var id in itemIDs)
    {
        int itemID = int.Parse(id);
        var item = items.SingleOrDefault(x => x.ID == itemID);
        selectedItems.Add(item);
    }
}

@(Html.Kendo().MultiSelect()
    .Name("Items")
    .BindTo(items)
    .DataTextField("Name")
    .DataValueField("ID")
    .Value(selectedItems)
)
