@model IEnumerable<CustomerDTO>

@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

@(Html.Kendo().Grid(Model)
    .Name("Customers")
    .ToolBar(bar => bar.Create())
    .Columns(col =>
    {
        col.Bound(x => x.Name);
        col.Bound(x => x.Address);
        col.Command(cmd =>
        {
            cmd.Edit();
            cmd.Destroy();
        });
    })
    .DataSource(data =>
    {
        data.Ajax()
            .Model(m => m.Id(x => x.ID))
            .Create(c => c.Action("Create", "Customer"))
            .Read(r => r.Action("Read", "Customer"))
            .Update(u => u.Action("Update", "Customer"))
            .Destroy(d => d.Action("Destroy", "Customer"));
    })
    .Editable(edit =>
    {
        edit.Mode(GridEditMode.PopUp);
    })
)